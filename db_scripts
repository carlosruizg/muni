CREATE DATABASE muni;

CREATE TABLE expert (
    id INT PRIMARY KEY GENERATED ALWAYS AS IDENTITY,
    name TEXT NOT NULL
);

CREATE TABLE labelling_task(
    id INT PRIMARY KEY GENERATED ALWAYS AS IDENTITY,
    title TEXT NOT NULL,
    description text,
    instructions TEXT NOT NULL,
    examples TEXT
);

CREATE TABLE labelling_task_response (
    id INT PRIMARY KEY GENERATED ALWAYS AS IDENTITY,
    FOREIGN KEY (user_id) REFERENCES expert(id),

);
